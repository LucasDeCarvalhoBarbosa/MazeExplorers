<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.lessvoid.com/nifty-gui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd https://raw.githubusercontent.com/void256/nifty-gui/1.4/nifty-core/src/main/resources/nifty.xsd">
	<registerSound id="entrando" filename="assets/Sounds/Click_Sharp_00.wav"/>
	<registerSound id="cimaBotao" filename="assets/Sounds/Click_Soft_00.wav"/>
	<registerSound id="clicar" filename="assets/Sounds/pcmouseclick1.wav"/>
    <useStyles filename="nifty-default-styles.xml"/>
    <useControls filename="nifty-default-controls.xml"/>
	
	<screen id="creditos" controller="View.Interface.TelaControlaMenusSimples">
		<layer id="camada" childLayout="vertical">
			<panel id="nomes" width="100%" height="90%" aligin="center" childLayout="vertical">
				<control name="label" text="${CALL.traduz(c.desenvolvedores)}" font="assets/Interface/Fonts/36/Xirod.fnt" color="#FF0000" width="100%" height="10%"/>
				<control name="label" text="Allysson Urias Ribeiro" font="assets/Interface/Fonts/16/Xirod.fnt" width="100%" height="5%"/>
				<control name="label" text="Lucas de Carvalho Barbosa" font="assets/Interface/Fonts/16/Xirod.fnt" width="100%" height="5%"/>
				<panel id="espaco2" width="100%" height="20%"/>
				<control name="label" text="${CALL.traduz(c.creditosAdicionais)}" font="assets/Interface/Fonts/36/Xirod.fnt" color="#FF0000" width="100%" height="10%"/>
				<control name="label" text="${CALL.traduz(c.nome1)}" font="assets/Interface/Fonts/16/Xirod.fnt" width="100%" height="5%"/>
				<control name="label" text="${CALL.traduz(c.nome2)}" font="assets/Interface/Fonts/16/Xirod.fnt" width="100%" height="5%"/>
			</panel>
			<panel id="botoes" width="100%" height="10%" aligin="center" childLayout="center">
				<control name="button" label="voltar" id="botaoVoltar" width="12%" height="80%" visibleToMouse="true" aligin="left">
					<interact onClick="proximaTela(start)"/>
					<effect>
						<onStartScreen name="move" mode="in" direction="left" length="300" startDelay="0" inherit="false"/>
						<onStartScreen name="playSound" sound="entrando" startDelay="0"/>
						<onHover name="playSound" sound="cimaBotao"/>
						<onClick name="playSound" sound="clicar"/>
					</effect>
				</control>
			</panel>
		</layer>
	</screen>
</nifty>